import java.util.Scanner;

public class piece
{
	public static String controller;
	public static char body;
	public static int[] gameboardSize = new int[2];
	public static arrayWorks aw = new arrayWorks();
	
	public int x;
	public int y;
	
	
	
	public piece(int x1, int y1, char b, String c)
	{
		controller = c;
		body = b;
		x = x1;
		y = y1;
	}
	
	// needs this in order to get the size of the board being played on.
	public void quickCheck(gameboard board)
	{
		gameboardSize = aw.copyIntArray(board.theSize);
	}
	
	public void move()
	{
		if (controller == "human")
		{
			Scanner s = new Scanner(System.in);
			
			String direction = "";
			int check = 0;
			while (check < 1)
			{
				direction = s.next();
				if (direction.equals("up") || direction.equals("right") || direction.equals("down") || direction.equals("left"))
					check++;
				else
					System.out.println("Please enter a direction...");
				//System.out.println(check + " " + direction);
			}
			
			if (direction.equals("up"))
				y--;
			else if (direction.equals("right"))
				x++;
			else if (direction.equals("down"))
				y++;
			else if (direction.equals("left"))
				x--;
		}
	}
	
	public char getChar()
	{
		return body;
	}
	
	public int getX()
	{
		return x;
	}
	
	public int getY()
	{
		return y;
	}

}
