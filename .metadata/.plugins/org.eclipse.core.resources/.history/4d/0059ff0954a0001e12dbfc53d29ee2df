					bird_r.frames.add(Images.loadImage("bird03.gif"));
					bird_r.frames.add(Images.loadImage("bird04.gif"));
					bird_r.frames.add(Images.loadImage("bird03.gif"));
					bird_r.frames.add(Images.loadImage("bird02.gif"));
