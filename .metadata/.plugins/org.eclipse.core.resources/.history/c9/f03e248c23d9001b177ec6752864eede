import java.awt.*;
import java.awt.event.*;
import java.awt.image.*;
import javax.imageio.*;
import javax.swing.*;
import javax.swing.event.*;
import javax.swing.JFrame;
 
public class Game extends JFrame {
 
	public static int sWidth = 800;
	public static int sHeight = 600;
	public static Point p = new Point(1280 / 2 - sWidth / 2, 800 / 2 - sHeight / 2);
	
	public static void main(String[] args) {
		new Game();
	}
	
	public Game() {
		this.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		this.setUndecorated(true);
		this.setSize(800,600);
		this.setLocation(p);
		this.setVisible(true);
		
		this.createBufferStrategy(2);
		
		gameLoop();
	}
	
	private void gameLoop() {
		// Your game logic goes here.
 
		MouseInputAdapter listener = new MouseInputAdapter()
        {
            public void mouseMoved(MouseEvent e)
            {
                DPanel.this.statusBar.setText("(" + e.getX() + ", " + e.getY() + ")");
            }
            
            public void mouseClicked(MouseEvent e)
            {
            	Base.Omar.setTo(e.getX(), e.getY());
            }
            
            public void mouseExited(MouseEvent e)
            {
                DPanel.this.statusBar.setText(" ");
            }
        };
        
		drawStuff();
	}
	
	private void drawStuff() {
		// Code for the drawing goes here.
	}
 
}